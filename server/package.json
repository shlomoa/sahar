{
  "name": "sahar-server",
  "version": "1.0.0",
  "description": "Standalone Unified Server for SAHAR TV Remote",
  "type": "module",
  "main": "dist/websocket-server.js",
  "scripts": {
    "build": "tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "start": "node dist/websocket-server.js",
  "typecheck": "tsc -p tsconfig.server.json --noEmit",
  "test": "npm run build && node --test dist/tests/**/*.test.js"
  },
  "dependencies": {
    "http-proxy": "^1.18.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/http-proxy": "^1.17.14",
    "@types/node": "^24.2.0",
    "@types/ws": "^8.18.1",
    "express": "^5.1.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.9.2"
  },
  "license": "MIT"
}
