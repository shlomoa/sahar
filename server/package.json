{
  "name": "sahar-server",
  "version": "1.0.0",
  "description": "Standalone Unified Server for SAHAR TV Remote",
  "main": "dist/main.js",
  "scripts": {
    "build": "ng build",
    "start": "node dist/main.js",
    "shared:build": "cd ../shared && npm run build",
    "shared:pack": "cd ../shared && npm run pack",
    "shared:buildpack": "npm run shared:build && npm run shared:pack",
    "shared:install:server": "npm i --save ../shared/dist/shared",
    "shared:install:tv": "cd ../apps/tv && npm i --save ../../shared/dist/shared",
    "shared:install:remote": "cd ../apps/remote && npm i --save ../../shared/dist/shared",
    "shared:install:all": "npm run shared:install:server && npm run shared:install:tv && npm run shared:install:remote",
    "build:clients": "cd ../apps/tv && npm run build && cd ../remote && npm run build",
    "relink:shared": "npm run shared:buildpack && npm run shared:install:all",
    "rebuild:all": "npm run build && npm run build:clients",
    "start:with-shared": "npm run relink:shared && npm run rebuild:all && node dist/main.js",
    "typecheck": "tsc -p tsconfig.server.json --noEmit",
    "test": "npm run build && node --test dist/tests/**/*.test.js"
  },
  "dependencies": {
    "@angular/animations": "^20.1.3",
    "@angular/cdk": "^20.1.3",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.1.3",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "http-proxy": "^1.18.1",
    "rxjs": "~7.8.0",
    "shared": "file:../shared/dist/shared",
    "tslib": "^2.3.0",
    "ws": "^8.14.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.5",
    "@angular/build": "^20.0.5",
    "@angular/cli": "^20.0.5",
    "@angular/compiler-cli": "^20.0.0",
    "@types/express": "^5.0.3",
    "@types/http-proxy": "^1.17.14",
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "express": "^5.1.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.9.2"
  },
  "license": "MIT"
}
