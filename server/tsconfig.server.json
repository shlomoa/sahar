{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "preserve",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "preserveSymlinks": true,
    "types": ["node"]
  },
  "include": ["websocket-server.ts",
              "shared/utils/logging.ts",
              "shared/websocket/websocket-protocol.ts",
              "shared/models/application-state.ts"],
  "exclude": ["dist", "node_modules"]
}
