{
  // NOTE: server/shared is a filesystem symlink to the repository root 'shared' directory.
  // This ensures models (e.g., ApplicationState) and protocol types are truly single-source.
  // Do not create parallel copies under server/; always modify the root shared/ content.
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "preserve",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "preserveSymlinks": true,
    "types": ["node"]
  },
  "include": [
    "fsm.ts",
    "websocket-server.ts",
    "shared/utils/logging.ts",
    "shared/utils/websocket-utils.ts",
    "shared/websocket/websocket-protocol.ts",
    "shared/models/application-state.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
