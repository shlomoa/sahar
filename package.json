{
  "name": "tv-remote-control-app",
  "main": "./src/main.ts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "validate": "node validation/validate.js",
    "validate:env": "node validation/validate.js --env",
    "validate:services": "node validation/validate.js --services",
    "validate:integration": "node validation/validate.js --integration",
    "start:tv": "cd apps/tv && ng serve --port 4203",
    "start:remote": "cd apps/remote && ng serve --port 4202",
