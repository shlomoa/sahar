{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start TV App",
			"type": "shell",
			"command": "ng",
			"args": [
				"serve",
				"--port",
				"4203"
			],
			"options": {
				"cwd": "${workspaceFolder}/apps/tv"
			},
			"group": "test",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Remote App",
			"type": "shell",
			"command": "ng",
			"args": [
				"serve",
				"--port",
				"4202"
			],
			"options": {
				"cwd": "${workspaceFolder}/apps/remote"
			},
			"group": "test",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Both Apps",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Start TV App",
				"Start Remote App"
			],
			"group": "test",
			"isBackground": true
		},
		{
			"type": "typescript",
			"tsconfig": "apps/remote/src/tsconfig.app.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - apps/remote/src/tsconfig.app.json"
		}
	]
}
