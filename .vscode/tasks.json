{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Validation: Full System Check",
			"type": "shell",
			"command": ".\\sahar-validation.ps1",
			"args": [
				"full"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Validation: Environment Check",
			"type": "shell",
			"command": ".\\sahar-validation.ps1",
			"args": [
				"check"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Validation: Start Applications",
			"type": "shell",
			"command": ".\\sahar-validation.ps1",
			"args": [
				"start"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Validation: Integration Tests",
			"type": "shell",
			"command": ".\\sahar-validation.ps1",
			"args": [
				"test"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Start TV App",
			"type": "shell",
			"command": "ng",
			"args": [
				"serve",
				"--port",
				"4203"
			],
			"options": {
				"cwd": "${workspaceFolder}/apps/tv"
			},
			"group": "test",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Remote App",
			"type": "shell",
			"command": "ng",
			"args": [
				"serve",
				"--port",
				"4202"
			],
			"options": {
				"cwd": "${workspaceFolder}/apps/remote"
			},
			"group": "test",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Both Apps",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Start TV App",
				"Start Remote App"
			],
			"group": "test",
			"isBackground": true
		},
		{
			"type": "typescript",
			"tsconfig": "apps/remote/src/tsconfig.app.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - apps/remote/src/tsconfig.app.json"
		}
	]
}
