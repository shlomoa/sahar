{
  "name": "sahar-validation",
  "version": "1.0.0",
  "description": "Validation and testing suite for SAHAR TV-Remote communication system",
  "main": "dist/validate.js",
  "type": "module",
  "scripts": {
    "check": "node -v && npm -v",
    "build:server": "cd ../server && ng build",
    "build:ui:tv": "cd ../apps/tv && ng build",
    "build:ui:remote": "cd ../apps/remote && ng build",
    "build:stubs": "tsc -p tsconfig.stubs.json",
    "build:ui:both": "npm run build:ui:tv && npm run build:ui:remote",
    "build:prod": "npm run build:server && npm run build:ui:both",
    "run:server": "node ../server/dist/main.js",
    "run:stub:tv": "node ./dist/stubs/tv-stub.js",
    "run:stub:remote": "node ./dist/stubs/remote-stub.js",
    "mode:prod": "npm run build:prod && npm run run:server",
    "mode:tv-stub": "npm run build:server && npm run build:ui:remote && concurrently -k -n server,tvstub \"npm:run:server\" \"npm:run:stub:tv\"",
    "mode:remote-stub": "npm run build:server && npm run build:ui:tv && concurrently -k -n server,remotestub \"npm:run:server\" \"npm:run:stub:remote\"",
    "mode:stubs": "npm run build:server && concurrently -k -n server,tvstub,remotestub \"npm:run:server\" \"npm:run:stub:tv\" \"npm:run:stub:remote\"",
    "start": "npm run mode:prod",
    "tv-stub": "npm run mode:tv-stub",
    "remote-stub": "npm run mode:remote-stub",
    "stubs": "npm run mode:stubs",
    "quick": "node dist/main.js quick",
    "quick:dev": "node dist/main.js quick --debug"
  },
  "dependencies": {
    "@angular/animations": "^20.1.3",
    "@angular/cdk": "^20.1.3",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.1.3",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "concurrently": "^8.2.2",
    "express": "^5.1.0",
    "http-proxy": "^1.18.1",
    "shared": "file:../shared/dist/shared",
    "ws": "^8.14.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.5",
    "@angular/build": "^20.0.5",
    "@angular/cli": "^20.0.5",
    "@angular/compiler-cli": "^20.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "validation",
    "testing",
    "websocket",
    "tv",
    "remote",
    "communication",
    "sahar"
  ],
  "author": "Sahar Project",
  "license": "MIT"
}
