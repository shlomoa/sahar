{
  "name": "sahar-validation",
  "version": "1.0.0",
  "description": "Validation and testing suite for SAHAR TV-Remote communication system",
  "main": "validate.js",
  "scripts": {
    "check": "node -v && npm -v",
    "start": "npm run build && ts-node ../server/websocket-server.ts",
    "test": "node test-drivers/tv-app-test-driver.js",
    "validate": "npm run check && npm run start && npm run test",
    "build": "npm run build:tv && npm run build:remote",
    "build:tv": "(cd .. && ng build tv)",
    "build:remote": "(cd .. && ng build remote)"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "express": "^5.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.0",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "validation",
    "testing",
    "websocket",
    "tv",
    "remote",
    "communication",
    "sahar"
  ],
  "author": "Sahar Project",
  "license": "MIT"
}
