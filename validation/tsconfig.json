{
  "compilerOptions": {
    "target": "ES2022",
    "module": "preserve",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "preserveSymlinks": true,
    "types": ["node"]
  },
  "include": [
    "stubs/remote-stub.ts",
    "stubs/tv-stub.ts",
    "config/validation-config.ts",
    "shared/shared/src/lib/models/websocket-protocol.ts",
    "shared/shared/src/lib/models/application-state.ts",
    "shared/shared/src/lib/utils/logging.ts",
    "shared/shared/src/lib/utils/websocket-utils.ts",
  ],
  "exclude": ["node_modules", "dist"]
}
